<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
android:layout_height="375dp"

        android:layout_marginBottom="2dp"

        android:ems="10"

        android:background="@color/Gray"
        android:gravity="right|center"
        android:textSize="40pt"
        android:inputType="textPersonName"
        android:text="0" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buAC"
            android:text="AC"
            android:onClick="acEvent"
            android:layout_marginRight="3pt"
            android:layout_marginLeft="8pt"
            android:layout_marginBottom="2dp"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/blue"
            >

        </Button>
        <Button
            android:id="@+id/buplusminus"
            android:text="+/-"
            android:onClick="numberEvent"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/blue"
            >
        </Button>
        <Button
            android:id="@+id/budiv"
            android:text="/"
            android:onClick="operatorEvent"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/blue"
            >
        </Button>
        <Button
            android:id="@+id/bumul"
            android:text="*"
            android:onClick="operatorEvent"
            android:textColor="@color/white"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:textSize="20dp"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/pink"
            >
        </Button>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bu7"
            android:text="7"
            android:onClick="numberEvent"
            android:layout_marginRight="3pt"
            android:layout_marginLeft="8pt"
            android:layout_marginBottom="2dp"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/blue"
            >

        </Button>
        <Button
            android:id="@+id/bu8"
            android:text="8"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:onClick="numberEvent"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/blue"
            >
        </Button>
        <Button
            android:id="@+id/bu9"
            android:text="9"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:onClick="numberEvent"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/blue"
            >
        </Button>
        <Button
            android:id="@+id/buper"
            android:text="%"
            android:textColor="@color/white"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:onClick="percentEvent"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:textSize="20dp"
            >
        </Button>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bu4"
            android:text="4"
            android:layout_marginRight="3pt"
            android:layout_marginLeft="8pt"
            android:layout_marginBottom="2dp"
            android:onClick="numberEvent"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/blue"
            >

        </Button>
        <Button
            android:id="@+id/bu5"
            android:text="5"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:onClick="numberEvent"
            android:layout_weight="1"
            android:background="@color/blue"
            >
        </Button>
        <Button
            android:id="@+id/bu6"
            android:text="6"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:background="@color/blue"
            >
        </Button>
        <Button
            android:id="@+id/buplus"
            android:text="+"
            android:textSize="20dp"
            android:onClick="operatorEvent"
            android:textColor="@color/white"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="2dp"
            android:layout_height="30pt"
            android:layout_width="42pt"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            >
        </Button>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/bu1"
        android:text="1"
        android:layout_marginRight="3pt"
        android:layout_marginLeft="8pt"
        android:layout_marginBottom="2dp"
        android:layout_height="30pt"
        android:layout_width="42pt"
        android:onClick="numberEvent"
        android:layout_weight="1"
        android:background="@color/blue"
        >

    </Button>
    <Button
        android:id="@+id/bu2"
        android:text="2"
        android:layout_marginRight="3pt"
        android:layout_marginBottom="2dp"
        android:layout_height="30pt"
        android:layout_width="42pt"
        android:layout_weight="1"
        android:onClick="numberEvent"
        android:background="@color/blue"
        >
    </Button>
    <Button
        android:id="@+id/bu3"
        android:text="3"
        android:layout_marginRight="3pt"
        android:layout_marginBottom="2dp"
        android:layout_height="30pt"
        android:layout_width="42pt"
        android:layout_weight="1"
        android:onClick="numberEvent"
        android:background="@color/blue"
        >
    </Button>
    <Button
        android:id="@+id/buminus"
        android:text="-"
        android:textSize="20dp"
        android:onClick="operatorEvent"
        android:textColor="@color/white"
        android:layout_marginRight="3pt"
        android:layout_marginBottom="2dp"
        android:layout_height="30pt"
        android:layout_width="42pt"
        android:layout_weight="1"
        android:background="@color/green"
        >
    </Button>

</GridLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bu0"
            android:text="0"
            android:onClick="numberEvent"
            android:layout_marginRight="3pt"
            android:layout_marginLeft="8pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="2"
            android:background="@color/blue"
            >
        </Button>
        <Button
            android:id="@+id/budot"
            android:text="."
            android:onClick="numberEvent"
            android:layout_marginRight="3pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="2"
            android:background="@color/blue"
            >
        </Button>
        <Button
            android:id="@+id/buequal"
            android:text="="
            android:textSize="20dp"
            android:textColor="@color/white"
            android:onClick="equalEvent"
            android:layout_marginRight="3pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="2"
            android:background="@color/purple"
            >
        </Button>
    </LinearLayout>
</LinearLayout>